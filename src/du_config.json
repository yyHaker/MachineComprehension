{
    "name": "MC",
    "n_gpu": 1,
     "data_loader": {
        "type": "DuReader",
        "args":{
            "data_path": "data/dureader/process/2019/v1.0",
            "train_file": "zhidao.train.json",
            "dev_file": "zhidao.dev.json",
            "test_file": "zhidao.test1.json",
            "train_batch_size":64,
            "dev_batch_size":16,
            "context_threshold": 500,
            "pretrain_emd_file": "sougou_100_nobinary",
            "device": "cuda"
        }
    },
    "arch": {
        "type": "BiDAF",
        "args": {
            "char_dim": 8,
            "char_channel_width": 3,
            "char_channel_size": 100,
            "word_dim": 100,
            "context_threshold": 400,
            "hidden_size": 100,
            "dropout": 0.2
        }
    },
    "optimizer": {
        "type": "Adadelta",
        "args":{
            "lr": 0.5,
            "weight_decay": 1e-4
        }
    },
    "loss": {
        "type":"cross_entropy"
    },
    "metrics": "ACC",
    "trainer": {
        "epochs": 3,
        "save_dir": "./result/dureader/saved/zhidao",
        "save_freq": 10,
        "verbosity": 2,
        "monitor": "ROUGE-L",
        "monitor_mode": "max",
        "result_file": "./result/predict/result.json",
        "prediction_file": "./result/predict/prediction.json",
        "log_step": 100
    },
    "visualization": {
        "log_dir": "./result/visual/"
    }
}