{
    "name": "MC",
    "n_gpu": 1,
     "data_loader": {
        "type": "SQuAD",
        "args":{
            "data_path": "data/squad",
            "train_file": "train-v1.1.json",
            "dev_file": "dev-v1.1.json",
            "train_batch_size": 64,
            "dev_batch_size": 16,
            "context_threshold": 400,
            "pretrain_emd_file": "glove.6B.100d.txt",
            "device": "cuda"
        }
    },
    "arch": {
        "type": "BiDAF",
        "args": {
            "char_dim": 8,
            "char_channel_width": 5,
            "char_channel_size": 100,
            "word_dim": 100,
            "context_threshold": 400,
            "hidden_size": 100,
            "dropout": 0.2
        }
    },
    "optimizer": {
        "type": "Adadelta",
        "args":{
            "lr": 0.5,
            "weight_decay": 1e-4
        }
    },
    "loss": {
        "type":"cross_entropy"
    },
    "metrics": "ACC",
    "trainer": {
        "epochs": 50,
        "save_dir": "./result/saved/",
        "save_freq": 10,
        "verbosity": 2,
        "monitor": "ROUGE-L",
        "monitor_mode": "max",
        "dataset_file": "data/squad/dev-v1.1.json",
        "prediction_file": "./result/predict/prediction.out"
    },
    "visualization": {
        "log_dir": "./result/visual/"
    }
}